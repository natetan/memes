<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#98ff98">

    <EditText
        android:id="@+id/memeLine1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="type message for line 1"
        android:inputType="number|text"/>

    <EditText
        android:id="@+id/memeLine2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memeLine1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:hint="type message for line 2"
        android:inputType="number|text"
        />

    <Button
        android:id="@+id/memeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/memeLine2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:text="@string/create_meme_button_text"/>

</RelativeLayout>